<UserControl RenderOptions.EdgeMode="Aliased"
             x:Class="Virms.Isocal.UI.Views.IsocalPhantomView"
             x:Name="PhantomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:h="http://helix-toolkit.org/wpf"
             xmlns:local="clr-namespace:Virms.Isocal.UI.Models3D"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <h:HelixViewport3D 
      Background="Black"
      ShowCoordinateSystem="True"
      ShowViewCube="True"
      x:Name="MainView"
      ZoomAroundMouseDownPoint="False"
      IsHeadLightEnabled="True">
      <!--Background="#F8F8F8"-->

      <h:HelixViewport3D.Camera>
        <PerspectiveCamera
          Position="0 -1000 0"
          LookDirection="0 1000 0"
          UpDirection="0 0 1" />
      </h:HelixViewport3D.Camera>

      <!--<h:SpotHeadLight Position="0 -1000 0" Brightness="0.8"/>-->
      <!--<h:SpotHeadLight Position="{Binding Headlight2}" Brightness="{Binding Brightness}"/>-->

      <!--<ModelVisual3D>
        <ModelVisual3D.Content>
          <AmbientLight Color="White"/>
        </ModelVisual3D.Content>
      </ModelVisual3D>-->
      <!-- h:DefaultLights/ -->
      <!-- local:GridLines/ -->

      <local:MarkersModel3D Fill="#050505" />
      <local:DrumModel3D Fill="#33FFFFFF" />

      <h:BoxVisual3D x:Name="Detector" Transform="{h:Translate 0, 500, 0}" Height="430" Width="100" Length="430"  Fill="White"/>
      <h:BoxVisual3D x:Name="X1" Transform="{h:Translate -110, -570, 0}" Height="200" Width="10" Length="100"  Fill="Black"/>
      <h:BindableTranslateManipulator Direction="-1 0 0" Value="{Binding X1.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=X1, Path=Transform}"/>
      <h:BoxVisual3D x:Name="X2" Transform="{h:Translate 110, -570, 0}" Height="200" Width="10" Length="100"  Fill="Black"/>
      <h:BindableTranslateManipulator Direction="1 0 0" Value="{Binding X2.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=X2, Path=Transform}"/>
      <h:BoxVisual3D x:Name="Y1" Transform="{h:Translate 0, -570, -110}" Height="100" Width="10" Length="200"  Fill="Black"/>
      <h:BindableTranslateManipulator Direction="0 0 -1" Value="{Binding Y1.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=Y1, Path=Transform}"/>
      <h:BoxVisual3D x:Name="Y2" Transform="{h:Translate 0, -570, 110}" Height="100" Width="10" Length="200"  Fill="Black"/>
      <h:BindableTranslateManipulator Direction="0 0 1" Value="{Binding Y2.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=Y2, Path=Transform}"/>

    </h:HelixViewport3D>

    <h:HelixViewport3D
      Grid.Column="1"
      Background="Black"
      ShowCoordinateSystem="True"
      ShowViewCube="True"
      ZoomAroundMouseDownPoint="False"
      IsHeadLightEnabled="True"
      IsRotationEnabled="False"
      IsZoomEnabled="False">

      <h:HelixViewport3D.Camera>
        <PerspectiveCamera
          Position="0 -1000 0"
          LookDirection="0 1000 0"
          UpDirection="0 0 1" />
      </h:HelixViewport3D.Camera>

      <local:MarkersModel3D Fill="#050505" />
      <local:DrumModel3D Fill="#33FFFFFF" />

      <h:BoxVisual3D x:Name="DetectorXray" Transform="{h:Translate 0, 500, 0}" Height="430" Width="100" Length="430"  Fill="White"/>
      <h:BoxVisual3D x:Name="X1Xray" Transform="{h:Translate -110, -570, 0}" Height="200" Width="10" Length="100" Fill="Black"/>
      <h:BindableTranslateManipulator Direction="-1 0 0" Value="{Binding X1.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=X1Xray, Path=Transform}"/>
      <h:BoxVisual3D x:Name="X2Xray" Transform="{h:Translate 110, -570, 0}" Height="200" Width="10" Length="100"  Fill="Black"/>
      <h:BindableTranslateManipulator Direction="1 0 0" Value="{Binding X2.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=X2Xray, Path=Transform}"/>
      <h:BoxVisual3D x:Name="Y1Xray" Transform="{h:Translate 0, -570, -110}" Height="100" Width="10" Length="200"  Fill="Black"/>
      <h:BindableTranslateManipulator Direction="0 0 -1" Value="{Binding Y1.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=Y1Xray, Path=Transform}"/>
      <h:BoxVisual3D x:Name="Y2Xray" Transform="{h:Translate 0, -570, 110}" Height="100" Width="10" Length="200"  Fill="Black"/>
      <h:BindableTranslateManipulator Direction="0 0 1" Value="{Binding Y2.LNGExt, Mode=OneWay}" TargetTransform="{Binding ElementName=Y2Xray, Path=Transform}"/>

    </h:HelixViewport3D>

  </Grid>

</UserControl>
